<%= form_for @image do |f| %>
  <% if @image.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @image.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id="firstblock">
    <%= f.label :link %>
    <%= f.file_field :link %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
